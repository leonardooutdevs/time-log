<div class='row green lighten-5'>
  <%= form_for(time_log) do |f| %>
    <div class='col l4'>
      <%= f.text_field :duration_hours %>
    </div>
    <div class='col l4'>
      <%= f.text_field :description %>
    </div>
    <div class='col l2'>
      <%= t('.pending') %>
    </div>
    <div class='col l2'>
      <%= f.submit t('.save'), class: 'btn green' %>
    </div>
  <% end %>
</div>

